<h1>All todos</h1>
<p>
<%= link_to "create a new todo", new_todo_path %>

</p>
<table>
<tr>
<th>Name</th>
<th>Description</th>
</tr>
<% @todos.each do |todo|%>
<tr>
<td><%= todo.name%></td>
<td><%= todo.description%></td>
<td> <%=link_to "edit" , edit_todo_path(todo)%>
</td>
<td> <%=link_to "Show" , todo_path(todo) %>
</td>
<td> <%#=button_to "Delete" , todo_path(todo), method: :delete %>
 <%= link_to "Delete" , todo_path(todo), data:{ turbo_method: :delete ,turbo_confirm: "Are you sure?" }%>
</td>
</tr>
<%end%>

</table>